<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<?import java.net.URL?>
<AnchorPane prefHeight="250.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.conexionbbddodoo_res_country_state_restapi.NuevaVentana">

    <!-- ImplementaciÃ³n de la hoja de estilos -->
    <stylesheets>
        <URL value="@Estilos.css" />
    </stylesheets>

    <children>
        <HBox prefHeight="30.0" prefWidth="260.0">
            <children>
                <Label prefHeight="17.0" prefWidth="112.0" text="NUEVA ENTIDAD">
                    <HBox.margin>
                        <Insets left="10.0" />
                    </HBox.margin>
                </Label>
            </children>
        </HBox>
        <HBox layoutY="30.0" prefHeight="30.0" prefWidth="260.0">
            <children>
                <Label prefHeight="17.0" prefWidth="65.0" text="Id">
                    <padding>
                        <Insets left="10.0" />
                    </padding>
                </Label>
                <TextField fx:id="txtId" text="No se puede modificar" />
            </children>
        </HBox>
        <HBox layoutY="75.0" prefHeight="30.0" prefWidth="260.0">
            <children>
                <Label prefHeight="17.0" prefWidth="76.0" text="Country-Id">
                    <padding>
                        <Insets left="10.0" />
                    </padding>
                </Label>
                <TextField fx:id="txtCountryId" />
            </children>
        </HBox>
        <HBox layoutY="116.0" prefHeight="30.0" prefWidth="260.0">
            <children>
                <Label prefHeight="17.0" prefWidth="65.0" text="Name">
                    <padding>
                        <Insets left="10.0" />
                    </padding>
                </Label>
                <TextField fx:id="txtName" prefHeight="25.0" prefWidth="100.0" />
            </children>
        </HBox>
        <HBox layoutY="195.0" prefHeight="30.0" prefWidth="260.0">
            <children>
                <Button fx:id="btnAceptar" mnemonicParsing="false" onAction="#onBtnAceptarClick" text="Aceptar">
                    <HBox.margin>
                        <Insets left="50.0" />
                    </HBox.margin>
                </Button>
                <Button fx:id="btnCancelar" mnemonicParsing="false" onAction="#onBtnCancelarClick" text="Cancelar">
                    <HBox.margin>
                        <Insets left="30.0" />
                    </HBox.margin>
                </Button>
            </children>
        </HBox>
        <HBox layoutY="152.0" prefHeight="30.0" prefWidth="260.0">
            <children>
                <Label prefHeight="17.0" prefWidth="65.0" text="Code">
                    <padding>
                        <Insets left="10.0" />
                    </padding>
                </Label>
                <TextField fx:id="txtCode" prefHeight="25.0" prefWidth="100.0" />
            </children>
        </HBox>
    </children>
</AnchorPane>
